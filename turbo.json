{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "docs": {
      "path": "apps/docs",
      "cmd": "npm run build",
      "watch": [
        "src/**"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ] 
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
